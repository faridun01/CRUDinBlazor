@page "/"

<PageTitle>Home</PageTitle>

<!-- Hero Section -->
<div class="hero-section text-center text-white d-flex align-items-center justify-content-center">
    <div class="hero-overlay"></div>
    <div class="hero-content">
        <h1 class="display-3 fw-bold">Welcome to Blazor E-Commerce</h1>
        <p class="lead">Your one-stop platform for discovering and sharing amazing products.</p>
        <a href="products" class="btn btn-lg btn-light shadow mt-3 px-4 py-2">Explore Books</a>
    </div>
</div>

<!-- Features Section -->
<div class="container mt-5">
    <h2 class="text-center fw-bold mb-4">Why Choose Us?</h2>
    <div class="row text-center">
        <div class="col-md-4">
            <i class="bi bi-book fs-1 text-primary"></i>
            <h4 class="mt-3">Vast Collection</h4>
            <p>Discover thousands of books across different genres.</p>
        </div>
        <div class="col-md-4">
            <i class="bi bi-star fs-1 text-warning"></i>
            <h4 class="mt-3">Highly Rated</h4>
            <p>Read reviews and ratings from fellow book lovers.</p>
        </div>
        <div class="col-md-4">
            <i class="bi bi-cloud-download fs-1 text-success"></i>
            <h4 class="mt-3">Free Downloads</h4>
            <p>Access books for free and enhance your knowledge.</p>
        </div>
    </div>
</div>

<!-- Testimonials Section -->
<div class="container mt-5">
    <h2 class="text-center fw-bold mb-4">What Our Readers Say</h2>
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card testimonial-card p-4 shadow">
                <p class="text-muted">"This platform has completely changed the way I discover products. I love it!"</p>
                <small class="fw-bold">- Alex Johnson</small>
            </div>
        </div>
        <div class="col-md-5">
            <div class="card testimonial-card p-4 shadow">
                <p class="text-muted">"Blazor E-Commerce is my go-to place for finding quality products without hassle!"</p>
                <small class="fw-bold">- Sarah Lee</small>
            </div>
        </div>
    </div>
</div>

<!-- Footer -->
<footer class="mt-5 py-3 bg-dark text-center text-white">
    <p class="mb-0">.</p>
</footer>
